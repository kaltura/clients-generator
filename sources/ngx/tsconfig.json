{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./.tmp",
		"declaration": true,
		"stripInternal": true,
		"experimentalDecorators": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"noEmitHelpers": false,
		"module": "es2015",
		"importHelpers": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2015",
			"ES2017",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/api/tests/**/*",
		"src/tests/**/*"
	],
	"angularCompilerOptions": {
		"skipTemplateCodegen": true
	}
}