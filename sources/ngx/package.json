{
  "name": "kaltura-ngx-client",
  "private": true,
  "version": "@VERSION@",
  "description": "Kaltura Angular based client",
  "keywords": [
    "Kaltura"
  ],
  "license": "AGPL-3.0",
  "author": "https://github.com/kaltura-ng/graphs/contributors",
  "contributors": [
    {
      "name": "Eran Sakal",
      "email": "eran@sakalim.com"
    },
    {
      "name": "Amir Chervinsky",
      "email": "amir.chr@gmail.com"
    }
  ],
  "scripts": {
    "build": "rm -rf dist && gulp build:esm",
    "lint": "tslint src/**/*.ts",
    "watch": "gulp watch",
    "deploy": "rm -rf dist && npm run build && cd dist && npm pack && npm link",
    "test": "jest"
  },
  "config": {
    "publishDirectory": "dist"
  },
  "main": "./index.js",
  "dependencies": {
    "@angular/core": "^6.0.5",
    "@angular/common": "^6.0.5"
  },
  "devDependencies": {
    "@angular/compiler": "^6.0.5",
    "@angular/compiler-cli": "^6.0.5",
    "@angular/platform-browser": "^6.0.5",
    "@angular/platform-browser-dynamic": "^6.0.5",
    "@types/core-js": "^2.5.0",
    "@types/jest": "^23.1.0",
    "@types/jquery": "^3.3.2",
    "@types/node": "^10.3.3",
    "core-js": "2.5.7",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-load-plugins": "^1.4.0",
    "jest": "^23.1.0",
    "jest-preset-angular": "^5.2.2",
    "merge2": "^1.0.2",
    "reflect-metadata": "^0.1.10",
    "rimraf": "^2.5.1",
    "run-sequence": "2.2.1",
    "rxjs": "^6.2.1",
    "standard-version": "^4.0.0",
    "through2": "^2.0.3",
    "ts-jest": "^22.4.6",
    "tslib": "^1.5.0",
    "tslint": "5.10.0",
    "tslint-loader": "3.6.0",
    "typescript": "^2.4.2",
    "zone.js": "^0.8.18"
  },
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 5.0.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/src/tests/setup-jest.ts",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src\/tests\/.+[.]spec[.].+$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
